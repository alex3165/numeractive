doctype html
.col-lg-3.contain-menu(data-ng-controller="categories")
	ul(role="menu").menu
		li(role="presentation")
			a(data-ui-sref='categories.home') Accueil
		li(data-ng-repeat="(i, category) in categories track by $index", role="presentation")
			a(data-ui-sref='categories.list({categoryId: i})') {{category.type}}
			span(data-ng-if="user.islogged", data-ng-click="removeCategory(category.id)") remove
	input(type="text", data-ng-if="user.islogged", width="200")
main(data-ui-view)