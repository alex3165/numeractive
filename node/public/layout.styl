.backabstract {
    position: absolute;
    left:0;
    right:0;
    width: 100%;
    height: 2000px;
    z-index: 10;
    background-color: #000;
    opacity: 0.8;
    display: none;
}

.mg-top {
    margin-top: 80px;
}

.col-centered {
    float: none;
    margin: 0 auto;
    text-align: center;
}

section.main,
section.footer {
    max-width: 100%;
    margin-right: 0px;
    margin-left: 0px;
}

.sidemenu {
    input[type=text] {
        width: auto;
    }
}

.footer {
    background-color: $middle-black;
    padding: 10px 0px;
    
    footer {
        margin-left: 20px;
        color: $light-grey;
    }
}