/********************************
        content article
*********************************/
.backlink{
    font-size: 14px;
}
 .backabstract {
    position: absolute;
    left:0;
    right:0;
    width: 100%;
    height: 2000px;
    z-index: 10;
    background-color: #000;
    opacity: 0.8;
    display: none;
    /* Comment to look full post */
}
.content-article {
    position: absolute;
    width: 1024px;
    left:0;
    right:0;
    margin: 40px auto;
    padding: 20px;
    z-index: 12;
    background-color: #fff;
    text-align: center;
    display: none;
    /* Comment to look full post */
}
.content-article img {
    margin: 0 auto;
}
.article-full p.lead{
    font-weight: 400;
}
.article-full,
.article-full p,
.article-full span{
    font-size: 17px;
    line-height: 26px;
    letter-spacing: 0.8px;
    color: #585858;
    font-weight: 300;
}