textarea:focus,
input:focus {
    outline: 0;
}

input[type=text] {
    margin-top: 30px;
    height: 50px;
    width: 100%;
    padding: 10px 20px;
    border: none;
    background-color: $light-grey;
}

article {
    .seperate {
        width: 200px;
        height: 1px;
        margin: 0 auto;
        background-color: #000;
    }

    .post {
        text-align: left;
        margin: 100px 0;
        
        .postimage {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            overflow: hidden;
            display: block;
            margin-bottom: 14px;
            
            img {
                transform: translateX(-100px);
            }
        }
        
        .cat-container{
            text-align: center;
            
            .category {

            }
        }

        h2 {
            font-weight: 800;
            letter-spacing: 1px;
            line-height: 40px;
        }
        
        p {
            line-height: 26px;
        }

    }

}