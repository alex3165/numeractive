doctype html
html(lang='fr', data-ng-app='numeractive')
	head
		title Numeractive

		//- Css dependency files
		link(rel='stylesheet', href='https://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
		link(rel="stylesheet", href="bower_components/angular-motion/dist/angular-motion.min.css")
		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900')
		link(rel='stylesheet', href='css/style.css')

		//- Javascript dependency files
		script(src='bower_components/angular/angular.min.js')
		script(src='bower_components/angular-animate/angular-animate.min.js')
		script(src="bower_components/angular-sanitize/angular-sanitize.min.js")
		script(src="bower_components/angular-cookies/angular-cookies.min.js")
		script(src='bower_components/angular-ui-router/release/angular-ui-router.min.js')
		script(src='bower_components/angular-strap/dist/angular-strap.min.js')
		script(src='bower_components/angular-strap/dist/angular-strap.tpl.min.js')
		script(src="bower_components/ngInfiniteScroll/build/ng-infinite-scroll.min.js")
		script(src="bower_components/ckeditor/ckeditor.js")
		
		//- Personal javascript application
		script(src='js/app.js')
		script(src='js/directives.js')
		script(src='js/services.js')
	body
		.loading(data-ng-show=('loading')) Chargement ...
		.container-full(data-ng-hide=('loading'))
			.backabstract
			header(data-ng-controller="SliderController")
				slider(data-images="images",class="clearfix")
				.containbg
					.row
						.col-lg-12.col-centered
							a(data-ui-sref='categories.home')
								img(src="images/logo.svg", id="logo",alt="logo numeractive")
					.row
						.col-lg-12.col-centered
							a(data-ui-sref='categories.home')
								h1.global-title numeractive
					.row.mg-top
						.col-lg-3
							span.contactlink
								a(data-ui-sref='contact',alt="contact link") contact
			.container-fluid(data-ui-view)