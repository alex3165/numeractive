doctype html
//- (infinite-scroll="myPagingFunction()", infinite-scroll-distance="1")
.col-lg-6
	input(type="text", class="search", placeholder="Search")
	article(data-ng-repeat="post in posts")
		.post
			.postimage.col-centered(data-ng-class="post.colorcat + 'shadow'")
				img(src="{{post.img}}",alt="post image",width="400")
			span.category {{post.category}}
			h2.title
				a(data-ui-sref='categories.article({articleId: post.id})') {{post.title}}
			p.preview {{post.text}}
			span.date {{post.creationDate}}
		.seperate