doctype html
.col-lg-6
	article
		.back-button
			span.icon-back
			a(data-ui-sref='categories.home') retour
		.article-glob
			.articleimage.col-centered(data-ng-class="post.colorcat + 'shadow'")
				img(src="{{post.img}}",alt="post image")
			span.category {{post.category}}
			h2.title {{post.title}}
			div(data-ng-if="user.islogged")
				p(data-ckedit="post.text") {{post.text}}
				pre {{post.text}}
			div(data-ng-if="!user.islogged")
				p {{post.text}}
			span.date Ecrit le {{post.creationDate}}